# =============================================================================
# Satisfactory Server Configuration
# =============================================================================
# Copy this file to .env and configure your settings
# Required values are marked with [REQUIRED] - server will fail without them
# Secrets should never be committed to version control
# =============================================================================

# =============================================================================
# REQUIRED SECRETS
# =============================================================================

# [REQUIRED] Cloudflare Tunnel Token
# Get from: https://one.dash.cloudflare.com/ > Networks > Tunnels > Create tunnel
# This token authenticates your tunnel with Cloudflare
CLOUDFLARE_TUNNEL_TOKEN=

# [REQUIRED if using SFTP] SFTP Password
# Set a strong password for SFTP access
# Generate with: openssl rand -base64 32
# SFTP is disabled by default - enable with: docker compose --profile sftp up -d
SFTP_PASSWORD=

# =============================================================================
# Optional Secrets (leave empty to disable features)
# =============================================================================

# Discord Webhook URL for notifications
# Create webhook: Discord Server Settings > Integrations > Webhooks
# Leave empty to disable notifications
DISCORD_WEBHOOK_URL=

# Cloudflare API credentials (for automated configuration)
# Only needed if using configure-cloudflare.py script
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ACCOUNT_ID=

# Steam Beta credentials (only if using experimental builds)
# STEAMBETAID=
# STEAMBETAKEY=

# =============================================================================
# Server Configuration
# =============================================================================

# Maximum players allowed
MAXPLAYERS=4

# Use experimental Steam beta version
STEAMBETA=false

# Autosave configuration
AUTOSAVENUM=5
AUTOSAVEINTERVAL=300
AUTOPAUSE=true
AUTOSAVEONDISCONNECT=true

# Crash reporting and network
CRASHREPORT=true
NETWORKQUALITY=3

# =============================================================================
# Port Configuration
# =============================================================================

# Game server port (TCP/UDP)
SERVER_GAME_PORT=7777

# Messaging port (TCP)
SERVER_MESSAGING_PORT=8888

# Server browser query port (TCP)
SERVER_QUERY_PORT=15000

# Server discovery beacon port (UDP)
SERVER_BEACON_PORT=15777

# SFTP port (only used with --profile sftp)
SFTP_PORT=2222

# =============================================================================
# Performance Settings
# =============================================================================

# Maximum objects in world
MAXOBJECTS=2162688

# Server tick rate
MAXTICKRATE=30

# Connection timeout (seconds)
TIMEOUT=30

# Enable streaming
SERVER_STREAMING=true

# =============================================================================
# Resource Limits
# =============================================================================

# Memory limits (Docker)
MEMORY_LIMIT=8G
MEMORY_RESERVATION=4G

# =============================================================================
# User/Group IDs
# =============================================================================
# Run 'id' command to get your UID/GID
# These should match your host user for proper file permissions

PUID=1000
PGID=1000

# =============================================================================
# Logging and Debugging
# =============================================================================

# Enable persistent logging
LOG=false

# Enable debug mode
DEBUG=false

# =============================================================================
# Backup Configuration
# =============================================================================

# Number of backups to retain
BACKUP_RETENTION_DAILY=7
BACKUP_RETENTION_WEEKLY=4

# =============================================================================
# Game Settings
# =============================================================================

# Disable seasonal events
DISABLE_SEASONAL_EVENTS=false

# Skip game updates on container start
SKIPUPDATE=false

# =============================================================================
# SFTP Configuration (optional)
# =============================================================================
# SFTP is disabled by default. Enable with: docker compose --profile sftp up -d

# SFTP username
SFTP_USER=satisfactory
